# Environment Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db
DB_USER=app_user
DB_PASSWORD=change-me

# JWT Configuration
JWT_SECRET=change-me
JWT_EXPIRES_IN=24h

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=willi
# Embeddings configuration
# provider: 'hash' (local, default) or 'openai'
EMBEDDINGS_PROVIDER=hash
EMBEDDINGS_SIZE=768
# If using OpenAI provider
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_BASE_URL=

# Cache TTLs (in seconds)
# Embedding cache default: 86400 (24h)
EMBEDDINGS_CACHE_TTL_SEC=86400
# Query cache default: 3600 (1h)
QUERY_CACHE_TTL_SEC=3600

# Google Gemini Configuration
GEMINI_API_KEY=

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Frontend
REACT_APP_API_URL=/api

# Feature Flags
ENABLE_M2C_ROLES=true

# State Management
AUTO_SAVE_INTERVAL=30000
